{
    "name": "lencse/classmaphp",
    "description": "Class map analyzer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Levente LÃ¶ki",
            "email": "leventeloki@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Lencse\\ClassMap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    },
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "lencse/ci-tools": "^3.1",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.3",
        "phpstan/phpstan": "^0.10.3",
        "phploc/phploc": "^4.0",
        "vimeo/psalm": "^2.0.10"
    },
    "scripts": {
        "init-dev": "./init-dev.sh",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html logs/phpunit/coverage-report --coverage-clover logs/phpunit/clover.xml --coverage-text --log-junit logs/phpunit/test-report.xml --colors=always",
        "min-coverage": "ci-test-coverage --min-coverage 99 --clover-file logs/phpunit/clover.xml",
        "psalm": "psalm",
        "md": "phpmd src/ text phpmd.xml && phpmd test/ text phpmd.xml",
        "cs": "phpcs --standard=PSR2 src test",
        "loc": "phploc -vvv src",
        "phpstan": "phpstan analyse -c phpstan.neon --level 7 src test",
        "test-all": "composer test-coverage && composer min-coverage && composer md && composer cs && composer psalm && composer phpstan && composer loc",
        "benchmark": "phpbench run  --revs=100 --iterations=5 --report=default",
        "benchmark-trace": "phpbench xdebug:trace --extension=\"PhpBench\\Extensions\\XDebug\\XDebugExtension\""
    }
}
